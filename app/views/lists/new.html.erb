<div class="flex flex-col">
  <div class="mb-2">
    <h1>Add a list to you collection</h1>
  </div>
  <div>
    <%= simple_form_for(@list) do |f| %>
      <%= f.input :name, label: false, placeholder: "name"%>
      <%= f.button :submit,  'Add a list', class:"bg-sky-300 transition ease-in-out delay-50 hover:bg-sky-500 rounded-md p-2 mt-1" %>
    <% end %>
  </div>
</div>
